<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="j.s.yarlykov">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.fragmentbased.MainActivityFr"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ForecastActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.fragmentbased.ForecastActivityFr" />
        <activity android:name=".ui.fragmentbased.InfoActivityFr" />
        <activity android:name=".ui.fragmentbased.history.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <service android:name=".services.ForecastService" />
    </application>

</manifest>